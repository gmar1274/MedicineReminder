<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/abhaya_libre</item>
        <item name="actionBarStyle">@style/MyActionBarLogo</item>
    </style>
    <style name="medicine_record_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:fontFamily">@font/abhaya_libre</item>
        <item name="android:background">@android:color/holo_orange_light</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="MyActionBarLogo" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/white</item>
        <item name="logo">@mipmap/ic_launcher</item>
        <item name="android:titleTextStyle">@style/ActionbarTextStyle</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>
    <style name="ActionbarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionBarTitle</item>
        <item name="android:fontFamily">@font/abhaya_libre</item>
    </style>
</resources>

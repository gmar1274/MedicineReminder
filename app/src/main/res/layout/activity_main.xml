<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0in"
        android:gravity="center"
        android:hint="Medicine Name"
        android:singleLine="true"
        android:textSize="18sp" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0.25in"
android:layout_alignParentRight="true"
        android:fontFamily="@font/alarm_clock"
        android:gravity="right"
        android:textColor="#0B3F5F"
        android:textSize="30sp"
        android:timePickerMode="spinner"
        tools:text="@tools:sample/date/ddmmyy" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/timePicker"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="0.1in"
        android:layout_marginTop="0.8in"
        android:layout_marginRight="0.25in"
        android:text="Start Time" />

    <TextView
        android:id="@+id/tvDur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0.1in"
        android:layout_marginTop="1.5in"
        android:layout_marginRight="0.25in"
        android:layout_toLeftOf="@id/timePicker"
        android:gravity="center"
        android:text="Lasting Effects (hours)"
        android:textSize="12sp" />

    <org.florescu.android.rangeseekbar.RangeSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_marginLeft="0.1in"
        android:layout_marginEnd="0.1in"
        android:layout_marginTop="1.75in"
        app:absoluteMaxValue="0.0"
        app:absoluteMinValue="10.0"
        android:textSize="18sp"
        app:textAboveThumbsColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2.5in"
        android:layout_marginEnd="0.25in"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Log"
        android:textSize="18sp"
        android:background="@color/button"
        android:textColor="@color/buttonText"
        />

</RelativeLayout>